<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:broker="http://activemq.apache.org/schema/core"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd">

    <camelContext xmlns="http://camel.apache.org/schema/spring">
        <route>
            <from uri="direct:greet"/>

            <!-- add on completion which is also a route that is executed
                 when the real route is complete.
                 Notice onComplete can also be global -->
            <onCompletion>
                <!-- route to our logger bean -->
                <bean ref="myReplyLogger"/>
            </onCompletion>

            <!-- here starts the regular route -->
            <to uri="log:a"/>
            <transform><simple>Hi ${body}</simple></transform>
            <to uri="log:b"/>
            <transform><simple>${body}. How are you?</simple></transform>
            <to uri="log:c"/>
        </route>
    </camelContext>

    <bean id="myReplyLogger" class="camelinaction.MyReplyLogger"/>

</beans>
